{
  "manifest_version": 3,
  "name": "ReFocus",
  "description": "(COEN 296A A3) This is an extension that focuses on rerouting to help users against ACDPs.",
  "version": "1.0",
  "author": "Team Focus5",
  "action": {
    "default_popup": "main.html",
    "default_title": "ReFOCUS"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["togglescript.js", "loadingscript.js", "reroutescript.js"],
      "matches": ["http://*.wikipedia.org/wiki/*", "https://*.wikipedia.org/wiki/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "declarativeNetRequest"]
}
